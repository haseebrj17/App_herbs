    {{>navbar}}
    <main id="swup" class="transition-fade">
        <section class="contactlanding">
            <div class="picturecontactus">
                <div class="flexcontainer">
                    <div class="video">
                        <video id="video" width="700" height="350" src="video/ITGS_IA_VIDEO_CONTACT_US.mp4" autoplay loop disablePictureInPicture zoom="0.01%"><source src="../../public/video/c1.mp4" type="video/mp4"></video>
                    </div>
                    <div class="container">
                        <div class="info">    
                            <h1 class="contactus">Contact Us</h1>
                            <div class="box">
                                <a href="https://auto:blank"><div class="mail"></div></a>
                                <div class="text">
                                    <h2 id="mail">Herbs@aashabulhayyat.com</h2>
                                </div>
                            </div>
                            <div class="box">
                                <a href="https://auto:blank"><div class="phone"></div></a>
                                <div class="text">
                                    <h2 id="number">+92----------</h2>
                                </div>
                            </div>
                            <div class="box">
                                <a href="https://auto:blank"><div class="insta"></div></a>
                                <div class="text">
                                    <h2 id="instagram">A’ashab-ul-Hayyat</h2> 
                                </div>
                            </div>           
                            <div class="box">
                                <a href="https://auto:blank"><div class="fb"></div></a>
                                <div class="text">
                                    <h2 id="facebook">A’ashab-ul-Hayyat</h2>
                                </div>                        
                            </div>    
                        </div>
                    </div>
                </div>    
            </div>
        </section>
        <section class="sub1_contact">
            <div class="background">
                <div class="container_sub1">
                    <div class="flex_sub1">
                        <div class="formcontainer">
                            <div class="form_container">
                                <h1>Send us a Message</h1>
                                <form action="/Contact.html" method="POST" class="form">    
                                    <label for="name">Name:</label>
                                    <input type="text" required name="name" id="name">
                                    <label for="email">Email:</label>
                                    <input type="email" required name="email" id="email">
                                    <label for="message">Message:</label>
                                    <textarea type="text" required name="message" id="message"></textarea>
                                    <input type="submit" id="submitbtn" value="Submit">
                                </form>
                            </div>
                        </div>
                        <div class="trapezoid"></div>
                    </div>
                    {{!-- <div class="footer_contactsub1">
                        <div class="imagefooter">
